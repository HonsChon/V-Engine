{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug VulkanPBR",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/VulkanPBR",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VK_LAYER_PATH}"
                },
                {
                    "name": "VK_ICD_FILENAMES",
                    "value": "${env:VK_ICD_FILENAMES}"
                },
                {
                    "name": "DYLD_LIBRARY_PATH",
                    "value": "${env:DYLD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Release VulkanPBR",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/VulkanPBR",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VK_LAYER_PATH}"
                },
                {
                    "name": "VK_ICD_FILENAMES",
                    "value": "${env:VK_ICD_FILENAMES}"
                },
                {
                    "name": "DYLD_LIBRARY_PATH",
                    "value": "${env:DYLD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "build"
        },
        {
            "name": "Run without Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/VulkanPBR",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VK_LAYER_PATH}"
                },
                {
                    "name": "VK_ICD_FILENAMES",
                    "value": "${env:VK_ICD_FILENAMES}"
                },
                {
                    "name": "DYLD_LIBRARY_PATH",
                    "value": "${env:DYLD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "run"
        }
    ]
}
